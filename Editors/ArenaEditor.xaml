<Window x:Class="ArenaFights.ArenaEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Arena – edycja" Height="640" Width="820"
        WindowStartupLocation="CenterOwner"
        Background="#F7F7F7">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Pasek tytuł + nazwa -->
            <RowDefinition Height="Auto"/>
            <!-- Przyciski obrazu -->
            <RowDefinition Height="*"/>
            <!-- Podgląd obrazu -->
            <RowDefinition Height="2*"/>
            <!-- Cechy (lista + dodawanie) -->
            <RowDefinition Height="Auto"/>
            <!-- OK/Anuluj -->
        </Grid.RowDefinitions>

        <!-- Tytuł + pole nazwy -->
        <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,8">
            <TextBlock Text="Nazwa:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="NameBox" Width="300" />
        </DockPanel>

        <!-- PRZYCISKI: powyżej obrazka -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
            <Button Content="Wybierz plik (PNG/JPG/GIF)" Width="220" Margin="0,0,8,0" Click="UploadFromFile_Click"/>
            <Button Content="Wklej ze schowka (PNG)" Width="200" Margin="0,0,8,0" Click="PasteFromClipboard_Click"/>
            <Button Content="Usuń obraz" Width="140" Click="RemoveImage_Click"/>
        </StackPanel>

        <!-- Podgląd obrazu (GIF powinien być animowany po Krok A) -->
        <Border Grid.Row="2"
                Background="Transparent"
                BorderBrush="#DDD" BorderThickness="1"
                CornerRadius="6"
                Padding="8">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                          Background="Transparent">
                <Image x:Name="ArenaPreview"
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
            </ScrollViewer>
        </Border>

        <!-- Cechy areny -->
        <GroupBox Grid.Row="3" Header="Cechy areny (ikony ze słownika umiejętności)" Margin="0,8,0,8"
                  Background="Transparent">
            <Grid Margin="8,4,8,8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Pasek dodawania -->
                    <RowDefinition Height="*"/>
                    <!-- Lista cech -->
                </Grid.RowDefinitions>

                <!-- Pasek dodawania cech -->
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <ComboBox x:Name="SkillsCombo"
                              Width="320"
                              Margin="0,0,8,0"
                              DisplayMemberPath="Nazwa"/>
                    <Button Content="Dodaj cechę" Width="140" Click="AddSkill_Click"/>
                </StackPanel>

                <!-- Lista cech z możliwością usuwania -->
                <ListBox x:Name="CechyList"
                         Grid.Row="1"
                         Background="#F2F2F2"
                         BorderBrush="#DDD"
                         Margin="0,8,0,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel LastChildFill="True" Margin="4" Background="Transparent">
                                <Border Width="40" Height="20" Background="Transparent" Margin="0,0,8,0"
                                        VerticalAlignment="Center">
                                    <Image Source="{Binding IkonaPathAbsolute}"
                                           Stretch="Uniform"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                </Border>
                                <TextBlock Text="{Binding Nazwa}" VerticalAlignment="Center" />
                                <Button Content="✕" Width="26" Height="26" Margin="8,0,0,0"
                                        Click="RemoveSkill_Click"
                                        HorizontalAlignment="Right" />
                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </GroupBox>

        <!-- OK / Anuluj -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="100" Margin="0,0,8,0" Click="Ok_Click"/>
            <Button Content="Anuluj" Width="100" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
