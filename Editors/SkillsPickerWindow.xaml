<Window x:Class="ArenaFights.SkillsPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wybierz umiejętność"
        Height="520" Width="620"
        WindowStartupLocation="CenterOwner"
        Background="Transparent">
    <Grid Margin="12" Background="#F2F2F2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="SearchBox" Margin="0,0,0,8" Height="28"
                 VerticalContentAlignment="Center"
                 TextChanged="SearchBox_TextChanged"
                 ToolTip="Filtruj po nazwie"/>

        <ListBox x:Name="List"
                 Grid.Row="1"
                 BorderBrush="#DDD" BorderThickness="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel Margin="4">
                        <Border Width="60" Height="30" Background="Transparent"
                                BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Margin="0,0,8,0">
                            <Image Source="{Binding IkonaPathAbsolute}" Stretch="Uniform"/>
                        </Border>
                        <TextBlock Text="{Binding Nazwa}" VerticalAlignment="Center" FontSize="14"/>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="OK" Width="110" Margin="0,0,8,0" Click="Ok_Click"/>
            <Button Content="Anuluj" Width="110" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
