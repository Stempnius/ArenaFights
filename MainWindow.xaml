<Window x:Class="ArenaFights.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tabs="clr-namespace:ArenaFights.Tabs"
        Title="Arena Fights"
        Height="800" Width="1200"
        Background="#F7F7F7"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Pasek narzędzi -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="8">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button Content="Zapisz" Width="100" Margin="0,0,8,0" Click="Save_Click"/>
                <Button Content="Wczytaj" Width="100" Click="Load_Click"/>
            </StackPanel>
        </DockPanel>

        <!-- Zakładki -->
        <TabControl x:Name="MainTabs" Grid.Row="1" Margin="8">
            <TabItem Header="Zawodnicy">
                <tabs:FightersTab x:Name="FightersTabControl"/>
            </TabItem>

            <TabItem Header="Umiejętności">
                <tabs:SkillsTab x:Name="SkillsTabControl"/>
            </TabItem>

            <TabItem Header="Areny">
                <tabs:ArenasTab x:Name="ArenasTabControl"/>
            </TabItem>
        </TabControl>

        <!-- Status -->
        <Border Grid.Row="2" Background="#F2F2F2" BorderBrush="#DDD" BorderThickness="1" Padding="6" Margin="8,0,8,8">
            <TextBlock x:Name="SelectedStatus" Text="Brak zaznaczenia"/>
        </Border>
    </Grid>
</Window>
