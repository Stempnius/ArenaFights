<Window x:Class="ArenaFights.TeamPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wybór drużyny" Height="520" Width="520"
        WindowStartupLocation="CenterOwner"
        Background="#F7F7F7">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Pasek wyszukiwania + akcje -->
        <DockPanel Grid.Row="0">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <TextBlock Text="Szukaj:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox x:Name="SearchBox" Width="220" TextChanged="SearchBox_TextChanged"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="Dodaj" Width="90" Margin="0,0,6,0" Click="Add_Click"/>
                <Button Content="Edytuj" Width="90" Margin="0,0,6,0" Click="Edit_Click"/>
                <Button Content="Usuń" Width="90" Click="Delete_Click"/>
            </StackPanel>
        </DockPanel>

        <!-- Lista drużyn -->
        <ListView x:Name="TeamsList"
                  Grid.Row="2"
                  Background="#F2F2F2" BorderBrush="#DDD"
                  SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Drużyna" DisplayMemberBinding="{Binding Nazwa}" Width="320"/>
                    <GridViewColumn Header="Zawodników" DisplayMemberBinding="{Binding MembersCount}" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- OK/Brak -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Wybierz" Width="110" Margin="0,0,6,0" Click="Ok_Click"/>
            <Button Content="Brak" Width="110" Margin="0,0,6,0" Click="None_Click"/>
            <Button Content="Anuluj" Width="110" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
